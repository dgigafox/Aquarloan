<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aquarloan.aquarloan.SignUpActivity">

    <!-- Login progress -->

    <TextView
        android:id="@+id/tvPromptSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="18sp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/signup_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/signup_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mobile_number_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <EditText
                        android:id="@+id/edMobileNumberSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/prompt_mobile_number"
                        android:inputType="phone"
                        android:text="63" />
                </android.support.design.widget.TextInputLayout>

                <ProgressBar
                    android:id="@+id/sendProgress"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgSendDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_done_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/verification_code_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <EditText
                        android:id="@+id/edVerificationCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:ems="10"
                        android:hint="@string/prompt_verification_code"
                        android:inputType="number"
                        android:visibility="visible" />
                </android.support.design.widget.TextInputLayout>

                <ProgressBar
                    android:id="@+id/verifyProgress"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgVerifyDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_done_black_24dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnVerify"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_verify"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSend"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_send"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
